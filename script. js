document.querySelectorAll('.faq-item h3').forEach((question) => {
  question.style.cursor = 'pointer';

  question.addEventListener('click', () => {
    const answer = question.nextElementSibling;

    // Ø¥ØºÙ„Ø§Ù‚ ÙƒÙ„ Ø§Ù„Ø£Ø¬ÙˆØ¨Ø© Ø§Ù„Ø£Ø®Ø±Ù‰
    document.querySelectorAll('.faq .answer').forEach((ans) => {
      if (ans !== answer) ans.style.display = 'none';
    });

    // Ø¥Ø²Ø§Ù„Ø© active Ù…Ù† Ø¨Ù‚ÙŠØ© Ø§Ù„Ø£Ø³Ø¦Ù„Ø©
    document.querySelectorAll('.faq-item h3').forEach((q) => {
      if (q !== question) q.classList.remove('active');
    });

    // ØªØ¨Ø¯ÙŠÙ„ Ø§Ù„Ø¹Ø±Ø¶ Ù„Ù„Ø³Ø¤Ø§Ù„ Ø§Ù„Ø­Ø§Ù„ÙŠ
