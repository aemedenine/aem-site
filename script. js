function loadNews() {
  fetch('https://api.rss2json.com/v1/api.json?rss_url=https://feeds.bbci.co.uk/arabic/rss.xml')
    .then(response => response.json())
    .then(data => {
      const newsItems = data.items.slice(0, 5);
      const newsText = newsItems.map(item => `<span class="news-item">ğŸ—ï¸ ${item.title}</span>`).join(' | ');
      const newsElem = document.getElementById('live-news');
   if (newsElem) newsElem.innerHTML = newsText;
    })
    .catch(() => {
      const newsElem = document.getElementById('live-news');
      if (newsElem) newsElem.textContent = "âš ï¸ Ù„Ù… ÙŠØªÙ… ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ø£Ø®Ø¨Ø§Ø±.";
    });
}
loadNews();
setInterval(loadNews, 600000); // ØªØ­Ø¯ÙŠØ« ÙƒÙ„ 10 Ø¯Ù‚Ø§Ø¦Ù‚

