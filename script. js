function updateTime() {
  const now = new Date();
  const timeString = now.toLocaleTimeString('ar-TN', { hour12: false });
  const timeElem = document.getElementById('current-time');
  if (timeElem) timeElem.textContent = timeString;
}
setInterval(updateTime, 1000);
updateTime();

